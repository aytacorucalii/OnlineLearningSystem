@model IEnumerable<TeacherListItemDTO>

<div class="container-fluid">
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Teachers</h6>
        </div>
        <div class="d-flex justify-content-end px-3 mt-3">
            <a class="btn btn-primary" style="width: 160px" asp-controller="Teacher" asp-action="Create">+ Add Teacher</a>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" width="100%" cellspacing="0" id="teacherTable">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Name</th>
                            <th>Surname</th>
                            <th>Subject</th>
                            <th>Experience</th>
                            <th>Salary</th>
                            <th>Course</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var teacher in Model)
                        {
                            <tr>
                                <td>@teacher.Id</td>
                                <td>@teacher.Name</td>
                                <td>@teacher.Surname</td>
                                <td>@teacher.Subject</td>
                                <td>@teacher.ExperienceYears</td>
                                <td>@teacher.Salary</td>
                                <td>@teacher.CourseName</td>
                                <td>
                                    <a class="btn btn-primary" asp-controller="Teacher" asp-action="Update" asp-route-id="@teacher.Id">Update</a>
                                    <a class="btn btn-danger" asp-controller="Teacher" asp-action="Delete" asp-route-id="@teacher.Id">Delete</a>
                                    <a class="btn btn-info" asp-controller="Teacher" asp-action="Details" asp-route-id="@teacher.Id">Details</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script src="~/admin/vendor/datatables/jquery.dataTables.min.js" defer></script>
<script src="~/admin/vendor/datatables/dataTables.bootstrap4.min.js" defer></script>
<script src="~/admin/js/demo/datatables-demo.js" defer></script>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        $('#teacherTable').DataTable();  // Initialize DataTables after the DOM is loaded
    });
</script>
