@model IEnumerable<TeacherListItemDTO>

<!-- Begin Page Content -->
<div class="container-fluid">
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Teacher Management</h6>
        </div>
        <div class="d-flex justify-content-end px-3 mt-3">
            <a class="btn btn-primary" style="width: 160px" asp-controller="Teacher" asp-action="Create">+ Add Teacher</a>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Name</th>
                            <th>Surname</th>
                            <th>Subject</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.Name</td>
                                <td>@item.Surname</td>
                                <td>@item.Subject</td>
                                <td class="text-center">
                                    <a class="btn btn-primary btn-sm" asp-controller="Teacher" asp-action="Update" asp-route-id="@item.Id">Update</a>
                                    <a class="btn btn-danger btn-sm" asp-controller="Teacher" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                                    <a class="btn btn-info btn-sm" asp-controller="Teacher" asp-action="Details" asp-route-id="@item.Id">Details</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<!-- /.container-fluid -->
