@model List<PaymentDTO>

@{
    ViewData["Title"] = "Ödənişlər";
}

<h1>@ViewData["Title"]</h1>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">
        @TempData["Error"]
    </div>
}

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">
        @TempData["Success"]
    </div>
}

<table class="table">
    <thead>
        <tr>
            <th>Ödəniş Tarixi</th>
            <th>Məbləğ</th>
            <th>Status</th>
            <th>Əməliyyatlar</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var payment in Model)
        {
            <tr>
                <td>@payment.PaymentDate</td>
                <td>@payment.Amount</td>
                <td>@payment.Status</td>
                <td>
                    <a href="@Url.Action("Details", "Payment", new { id = payment.Id })" class="btn btn-info">Detallar</a>
                    <a href="@Url.Action("UpdateStatus", "Payment", new { id = payment.Id, status = payment.Status == OnlineLearning.Core.Enums.PaymentStatus.Completed ? false : true })" class="btn btn-warning">Statusu Dəyiş</a>
                </td>
            </tr>
        }
    </tbody>
</table>
