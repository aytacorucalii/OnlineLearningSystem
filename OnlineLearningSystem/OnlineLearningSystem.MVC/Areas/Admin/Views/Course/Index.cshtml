@model IEnumerable<CourseListItemDTO>

<div class="container-fluid">
    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex justify-content-between align-items-center">
            <h6 class="m-0 font-weight-bold text-primary">Kurslar</h6>
            <a class="btn btn-primary" asp-controller="Course" asp-action="Create">+ Kurs Əlavə Et</a>
        </div>
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-bordered text-center" width="100%" cellspacing="0">
                        <thead class="thead-dark">
                            <tr>
                                <th>#</th>
                                <th>Ad</th>
                                <th>Təsvir</th>
                                <th>Müddət</th>
                                <th>Qiymət</th>
                                <th>Əməliyyatlar</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Id</td>
                                    <td>@item.CourseName</td>
                                    <td>@item.Description</td>
                                    <td>@(string.IsNullOrEmpty(item.Duration.ToString()) ? "Təyin olunmayıb" : item.Duration.ToString())</td>
                                    <td>@item.Price.ToString("0.00") ₼</td>
                                    <td>
                                        <div class="btn-group">
                                            <a class="btn btn-info btn-sm" asp-controller="Course" asp-action="Details" asp-route-id="@item.Id">Detallar</a>
                                            <a class="btn btn-warning btn-sm" asp-controller="Course" asp-action="Update" asp-route-id="@item.Id">Yenilə</a>
                                            <a class="btn btn-danger btn-sm" asp-controller="Course" asp-action="Delete" asp-route-id="@item.Id">Sil</a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <p class="text-muted text-center">Sistemdə heç bir kurs tapılmadı.</p>
            }
        </div>
    </div>
</div>
