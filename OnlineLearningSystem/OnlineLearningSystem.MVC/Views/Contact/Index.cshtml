@model ContactDTO

<section class="contact" id="contact">
    <h2 class="title">Contact <span>With</span> US</h2>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success text-center">@TempData["SuccessMessage"]</div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger text-center">@TempData["ErrorMessage"]</div>
    }

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="p-4 border rounded shadow bg-light">

                    <!-- Form -->
                    <form id="contactForm" method="post" asp-controller="Contact" asp-action="SendMessage">
                        <div class="input-group mb-3">
                            <input type="text" id="FullName" asp-for="FullName" class="form-control" placeholder="Name Surname.." required />
                            <input type="text" id="Phone" asp-for="Phone" class="form-control" placeholder="+994(XX)XXX-XX-XX" required />
                        </div>

                        <div class="input-group mb-3">
                            <input type="email" id="Email" asp-for="Email" class="form-control" placeholder="example@gmail.com" required />
                            <input type="text" id="Subject" asp-for="Subject" class="form-control" placeholder="Subject.." required />
                        </div>

                        <div class="mb-3">
                            <textarea id="Message" asp-for="Message" class="form-control" rows="4" placeholder="Message.." required></textarea>
                        </div>

                        <button type="submit" class="btn btn-primary w-100">Send</button>
                        <p id="responseMessage" class="mt-3 text-center"></p>
                    </form>

                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script>
        // Formun Enter basıldığında göndərilməsi
        document.getElementById("contactForm").addEventListener("keypress", function (event) {
            if (event.key === "Enter") {
                event.preventDefault(); // Səhifənin yenilənməsinin qarşısını alır
                this.submit(); // Formu göndərir
            }
        });
    </script>
}
